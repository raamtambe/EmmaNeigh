{
  "name": "emmaneigh",
  "version": "3.2.0",
  "description": "Signature Packet Automation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac"
  },
  "author": "Raam Tambe",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "archiver": "^6.0.1"
  },
  "build": {
    "appId": "com.emmaneigh.app",
    "productName": "EmmaNeigh",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources/${os}",
        "to": "processor",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "portable": {
      "artifactName": "EmmaNeigh-Portable.exe"
    }
  }
}
